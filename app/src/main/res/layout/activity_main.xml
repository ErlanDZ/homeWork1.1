<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_se"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/severelectro"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/et_login"
        app:layout_constraintTop_toBottomOf="@id/image_se"
        android:hint="Введте логин"
        android:drawablePadding="10dp"
        android:background="@drawable/fileds"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_pasword"
        app:layout_constraintTop_toBottomOf="@id/et_login"
        android:hint="Введте пароль"
        android:drawablePadding="10dp"
        android:background="@drawable/fileds"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/chb_remember"
        app:layout_constraintTop_toBottomOf="@id/et_pasword"
        app:layout_constraintLeft_toLeftOf="@id/et_pasword"
        android:text="Remember Me"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/txt_forget"
       android:drawableLeft="@drawable/ic_baseline_lock_open_24"
       android:text="Forget Password"
       app:layout_constraintTop_toBottomOf="@id/et_pasword"
       app:layout_constraintRight_toRightOf="@id/et_pasword"
       android:layout_marginTop="28dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="LOG IN"
        app:layout_constraintTop_toBottomOf="@id/chb_remember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sign"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="SIGN UP"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>